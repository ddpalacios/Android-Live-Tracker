<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/getData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/ToMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Head To Maps"
        android:layout_below="@id/getData"

        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>



    <Button
        android:id="@+id/closeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close Connection"
        android:layout_marginTop="50dp"
        android:layout_below="@id/ToMaps"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result ..."
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical"
        android:layout_marginTop="30dp"
        android:layout_below="@id/closeData"
        android:textSize="15sp"/>

    <Button
    android:id="@+id/dataReader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Read CSV"
    android:layout_marginTop="50dp"
    android:layout_below="@id/result"
    android:layout_centerHorizontal="true"/>



    <Button
        android:id="@+id/getUserLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrieve Current Location Coord"
        android:layout_marginTop="50dp"
        android:layout_below="@id/dataReader"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>